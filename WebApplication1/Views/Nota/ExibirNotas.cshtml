@model IEnumerable<Nota>;
@{
    ViewData["Title"] = "ExibirNotas";
}

<partial name="_NavBar" />

<h1 class="Nome-Repositorio">@ViewData["Titulo"]</h1>


<h3>Total de notas: @Model.Count()</h3>

<a asp-action="AdicionarNota" asp-route-codigo="@ViewData["repositorioId"]">Adicionar Anotação</a>



<ul class="list-group">s
    @foreach (var nota in Model)
    {

        <li class="list-group-item">
            <div class="row">
                <div class="col-9">

                    <a class="text-decoration-none" asp-action="ExibirDetalhes" asp-route-id="@nota.NotaId"><h3 class="Nota-Titulo Campo-De-Busca">@nota.Titulo</h3></a>

                </div>
                <div class="col col-lg-3">
                    <form action="/" method="post">
                        <button class="btn btn-danger" asp-action="ExcluirNota" asp-route-notaId="@nota.NotaId">Deletar</button>
                        <a asp-action="EditarNota" asp-route-notaId="@nota.NotaId">Editar</a>
                    </form>
                </div>
            </div>
        </li>

    }
</ul>

