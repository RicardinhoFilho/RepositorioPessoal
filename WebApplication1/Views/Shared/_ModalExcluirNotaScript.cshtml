
<script>
    function ConfirmarExclusao(notaId) {
        $(".modal").modal();
        $(".btnExcluir").on('click', function () {
            $.ajax({
                url: '/Nota/ExcluirNota',
                method: 'POST',
                data: { notaId: notaId },
                success: function (data) {
                    location.reload(true);
                }
            });
        });
        $(".btnFechar").on('click', function () {
            notaId = null;
            $(".modal").modal('hide');
        })
    }
</script>
